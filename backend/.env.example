# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/ward26db

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# Admin Credentials (for initial setup)
ADMIN_EMAIL_1=admin1@ward26.gov.bd
ADMIN_EMAIL_2=admin2@ward26.gov.bd
ADMIN_EMAIL_3=admin3@ward26.gov.bd

# Email Configuration (Primary: Gmail with App Password)
# IMPORTANT: For Gmail, use App Password instead of regular password
# Steps: 1. Enable 2FA, 2. Generate App Password, 3. Use App Password below
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_16_character_app_password_here

# Alternative Email Providers (Fallback options)
# SendGrid (uncomment to use)
# SENDGRID_API_KEY=your_sendgrid_api_key_here

# Mailgun (uncomment to use)
# MAILGUN_SMTP_LOGIN=your_mailgun_smtp_login
# MAILGUN_SMTP_PASSWORD=your_mailgun_smtp_password

# Twilio Configuration (India)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+919876543210
TWILIO_WHATSAPP_NUMBER=+14155238886
# Admin phone numbers in E.164 format (India: +91XXXXXXXXXX)
ADMIN_PHONE_1=+919876543210
ADMIN_PHONE_2=+919876543211
ADMIN_PHONE_3=+919876543212

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
